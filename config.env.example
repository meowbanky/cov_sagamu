# Configuration Template File
# Copy this file to config.env and fill in your actual values
# DO NOT commit config.env to version control as it contains sensitive data

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Maps Configuration
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Application Configuration
APP_NAME=Cooperative Management System
APP_ENV=production
APP_DEBUG=false

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,xlsx,xls,jpg,jpeg,png

# Security Configuration
SESSION_TIMEOUT=3600
ENCRYPTION_KEY=your_encryption_key_here
# Generate a secure API secret using: php -r "echo bin2hex(random_bytes(32));"
API_SECRET=your-api-secret-key-here

# Email Configuration (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@example.com
MAIL_FROM_NAME="COV Cooperative Society"




